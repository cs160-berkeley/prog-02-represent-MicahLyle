<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView style="?android:textAppearanceMedium"
        android:padding="5dp"
        android:id="@+id/repName"
        android:gravity="center"
        android:lineSpacingMultiplier="1.2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/name_label"
        android:layout_marginTop="63dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView style="?android:textAppearanceSmall"
        android:padding="5dp"
        android:id="@+id/repParty"
        android:gravity="center"
        android:lineSpacingMultiplier="1.2"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/repName"
        android:layout_marginBottom="10dp"
        android:text="@string/party_label" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="openPhoneDetailedView"
        android:text="@string/button_more_info"
        android:id="@+id/goToPhoneDetailedViewButton"
        android:background="#32f473"
        android:layout_below="@+id/repParty"
        android:layout_centerHorizontal="true" />
</RelativeLayout>